<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="@color/blue" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Seated Left Knee Extension"
                android:fontFamily="@font/source_sans"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/rep_count_text"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Reps 0 / 10"
                android:fontFamily="@font/source_sans"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:padding="10dp"
                android:layout_gravity="right"
                android:layout_marginEnd="30dp" />

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@android:color/black" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextureView
                    android:layout_width="900px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:id="@+id/camera_feed" />

                <com.example.physiokneeds_v3.OverlayView
                    android:layout_width="900px"
                    android:layout_height="match_parent"
                    android:layout_alignParentRight="true"
                    android:id="@+id/overlayView" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="300dp"
                        android:layout_height="300dp"
                        android:background="@drawable/outline_button"
                        android:src="@drawable/baseline_fitness_center_24"
                        android:padding="10dp"
                        android:layout_marginStart="170dp"
                        android:layout_marginTop="50dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="1. Sit on a chair with both feet on the floor.\n\n2. Slowly bend your left knee to bring your leg up\n   a. Lift until you feel discomfort or your leg is \n\        pointing straight out\n\n3. Slowly lower your leg back to the ground"
                        android:fontFamily="@font/source_sans"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:padding="10dp"
                        android:layout_marginStart="130dp"
                        android:layout_marginTop="30dp" />

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>



    <TextView
        android:id="@+id/kneeAngle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:text="Right Knee Angle: LANDSCAPE"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/repsCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/kneeAngle"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:text="Reps: "
        android:visibility="invisible"/>

    <Button
        android:id="@+id/search_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/repsCount"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:text="SEARCH DEVICES"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/bt_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/search_button"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:text="CONNECT TO MOUNT"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/send_coords"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_button"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:text="SEND COORDS"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bt_button"
        android:layout_margin="20dp"
        android:textSize="20dp"
        android:text="NOT CONNECTED"
        android:visibility="invisible"/>

</RelativeLayout>